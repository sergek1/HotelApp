<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Base.Theme.HotelTest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.HotelTest" parent="Base.Theme.HotelTest" />

    <style name="MyButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">15dp</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/blue</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorTextAppearance">@style/BoxErrorBlackText</item>
        <item name="boxBackgroundColor">@color/boxBackgroundColor</item>
        <item name="hintTextColor">@color/gray_text</item>
        <item name="android:textColorHint">@color/gray_text</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusTopEnd">10dp</item>
        <item name="boxCornerRadiusTopStart">10dp</item>
        <item name="boxCornerRadiusBottomStart">10dp</item>
        <item name="boxCornerRadiusBottomEnd">10dp</item>
    </style>

    <style name="CustomCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>
</resources>